package backend;

import java.util.*;

public class UserSchedulerFIFO implements UserScheduler {

	private List<ULT> notArrivedList;
	private Queue<ULT> readyQueue;
	private ULT running;
	
	public UserSchedulerFIFO() {
		
	}
	
	@Override
	public boolean isFinished() {
		return running == null && readyQueue.isEmpty() && notArrivedList.isEmpty();
	}

	@Override
	public boolean wantsCPU() {
		return running != null && running.wantsCPU();
	}

	@Override
	public void runCPU(int core) {
		running.runCPU(core);
		if (running.isFinished()) {
			running = (readyQueue.isEmpty() ? null : readyQueue.poll());
		}
	}

	@Override
	public boolean wantsIO() {
		// TODO Auto-generated method stub
		return false;
	}

	@Override
	public int getIORequest() {
		// TODO Auto-generated method stub
		return 0;
	}

	@Override
	public void runIO(int i) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void oneQuantumGoesBy() {
		// TODO Auto-generated method stub
		
	}

}
